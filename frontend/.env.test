# Test Configuration for Podplay Sanctuary

## Environment Variables for Testing

# Jest Configuration
NODE_ENV=test
JEST_WORKER_ID=1

# API Configuration for Tests
VITE_API_BASE_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000
VITE_MOCK_API=true

# Feature Flags for Testing
VITE_ENABLE_MOCK_AUTH=true
VITE_ENABLE_MOCK_CHAT=true
VITE_ENABLE_MOCK_FILES=true
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Test Database (if needed)
TEST_DATABASE_URL=sqlite::memory:

# External Service Mocks
VITE_MOCK_TOGETHER_AI=true
VITE_MOCK_SOCKET_IO=true

# Debug Configuration
DEBUG_TESTS=false
VERBOSE_TESTS=false
ENABLE_TEST_LOGGING=false

# Coverage Configuration
COVERAGE_THRESHOLD_STATEMENTS=80
COVERAGE_THRESHOLD_BRANCHES=75
COVERAGE_THRESHOLD_FUNCTIONS=80
COVERAGE_THRESHOLD_LINES=80

# Performance Test Configuration
PERFORMANCE_BUDGET_FCP=2000
PERFORMANCE_BUDGET_LCP=4000
PERFORMANCE_BUDGET_CLS=0.1
PERFORMANCE_BUDGET_FID=100

# Accessibility Test Configuration
A11Y_COMPLIANCE_LEVEL=AA
A11Y_WCAG_VERSION=2.1

# Visual Regression Configuration
VISUAL_REGRESSION_THRESHOLD=0.2
VISUAL_REGRESSION_UPDATE_SNAPSHOTS=false

# Browser Test Configuration
DEFAULT_BROWSER=chromium
HEADLESS_BROWSER=true
BROWSER_TIMEOUT=30000

# Test Retry Configuration
TEST_RETRY_COUNT=2
FLAKY_TEST_RETRY_COUNT=3

# CI/CD Specific
CI_PARALLEL_WORKERS=4
CI_TIMEOUT_MINUTES=15
CI_FAIL_FAST=false

# Security Test Configuration
SECURITY_SCAN_LEVEL=medium
OWASP_ZAP_TIMEOUT=300

# Monitoring and Alerting
SLACK_WEBHOOK_URL_TEST_ALERTS=""
EMAIL_ALERT_RECIPIENTS=""

# Test Data Configuration
USE_REAL_TEST_DATA=false
TEST_DATA_SEED=12345
MOCK_RESPONSE_DELAY=100
