{
  "name": "podplay-build-sanctuary",
  "version": "1.0.0",
  "description": "Podplay Build Sanctuary - Your sanctuary for calm, empowered creation with Mama Bear Gem",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,json}\"",
    "start": "npm run dev",
    "postinstall": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:unit": "jest --testPathPattern=src/__tests__/utils",
    "test:integration": "jest --testPathPattern=src/__tests__/integration",
    "test:e2e": "jest --testPathPattern=src/__tests__/e2e",
    "test:performance": "jest --testNamePattern='performance|benchmark'",
    "test:accessibility": "jest --testNamePattern='accessibility|a11y'",
    "test:update-snapshots": "jest --updateSnapshot",
    "test:clear-cache": "jest --clearCache",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:silent": "jest --silent",
    "test:verbose": "jest --verbose"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "@reduxjs/toolkit": "^2.8.2",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/xterm": "^5.5.0",
    "axios": "^1.5.0",
    "crypto-js": "^4.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.6.1",
    "socket.io-client": "^4.8.1",
    "styled-components": "^6.1.18",
    "typescript": "^5.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.23.2",
    "@babel/preset-env": "^7.23.2",
    "@babel/preset-react": "^7.22.15",
    "@babel/preset-typescript": "^7.23.2",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/crypto-js": "^4.2.2",
    "@types/jest": "^29.5.5",
    "@types/node": "^22.15.21",
    "@types/styled-components": "^5.1.34",
    "@types/testing-library__jest-dom": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "babel-jest": "^29.7.0",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "fake-indexeddb": "^4.0.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-canvas-mock": "^2.5.2",
    "jest-environment-jsdom": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jest-fetch-mock": "^3.0.3",
    "jest-websocket-mock": "^2.5.0",
    "msw": "^1.3.2",
    "prettier": "^3.0.0",
    "resize-observer-polyfill": "^1.5.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.0.2",
    "vite": "^4.4.5"
  },
  "keywords": [
    "react",
    "typescript",
    "sanctuary",
    "mcp",
    "ai-agent",
    "podplay",
    "developer-tools",
    "mama-bear"
  ],
  "author": "Nathan - Podplay Build Sanctuary",
  "license": "MIT"
}
